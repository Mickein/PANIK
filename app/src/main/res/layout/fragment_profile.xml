<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:id="@+id/fragment_profile_page"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:background="@drawable/semi_circle_login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/imgProfileImage"
            android:layout_width="79dp"
            android:layout_height="81dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/profile"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="230dp"
            android:layout_height="26dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="124dp"
            android:text="Email"
            android:textAlignment="textStart"
            android:textColor="#F8F7F7"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblName"
            android:layout_width="224dp"
            android:layout_height="43dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="72dp"
            android:text="Name"
            android:textColor="#F8F7F7"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="318dp"
            android:layout_height="80dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="221dp"
            android:background="@drawable/custom_profile_buttons"
            android:drawableLeft="@drawable/baseline_settings_24"
            android:paddingLeft="10dp"
            android:text="SETTINGS"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAboutDevs"
            android:layout_width="318dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/custom_profile_buttons"
            android:drawableLeft="@drawable/baseline_emoji_people_24"
            android:paddingLeft="10dp"
            android:text="ABOUT DEVS"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnReportBugs"
            android:layout_width="318dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="424dp"
            android:background="@drawable/custom_profile_buttons"
            android:drawableLeft="@drawable/baseline_bug_report_24"
            android:paddingLeft="10dp"
            android:text="REPORT BUGS"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="318dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="568dp"
            android:background="@drawable/custom_profile_buttons"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:paddingLeft="10dp"
            android:text="LOGOUT"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnGoToProfilePage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="293dp"
            android:layout_marginTop="27dp"
            android:drawableLeft="@drawable/baseline_edit_square_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>