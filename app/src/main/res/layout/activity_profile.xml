<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <View
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@drawable/semi_circle_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/imgProfilePageImage"
        android:layout_width="92dp"
        android:layout_height="96dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtProfileEmail"
        android:layout_width="307dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="184dp"
        android:editable="false"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#F8F7F7"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtProfileName"
        android:layout_width="325dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp"
        android:editable="false"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#F8F7F7"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtSurnameProfile"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="259dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:textColorHint="#8E7C7C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNumberProfile"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="324dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:textColorHint="#8E7C7C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackToProfile"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/baseline_arrow_circle_left_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>