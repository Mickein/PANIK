<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the solid background color (if needed) -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Define the border (stroke) -->
    <stroke
        android:width="15dp"
        android:color="@drawable/semi_circle_login" />

    <!-- Optional: Define the corner radius for rounded corners -->
    <corners android:radius="8dp" /> <!-- Rounded corners -->

    <!-- Optional: Define padding inside the border -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
